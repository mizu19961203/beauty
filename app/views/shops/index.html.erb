
<table>
  <thead>
    <tr>
      <td></td>
      <td>名称</td>
      <td>内容</td>
      <td>店舗写真</td>
      <td>場所・住所</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.id %></td>
        <td><%= shop.name %></td>
        <td><%= shop.description %></td>
        <td>
          <% shop.images.each do |i| %>
           <%= image_tag i.image_url.to_s[0] , width: '100%', height: '100%'%>
          <% end %>
        </td>

        <td><%= shop.address %></td>
        <td><%= link_to '詳細', shop_path(shop) %></td>
        <td><%= shop.user_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
    <div class="col-sm-10 col-sm-offset-1" style="text-align:center; padding:20px; font-size: 25px;">
        <%= paginate @shops, class: "paginate" %>
    </div>
</div>

